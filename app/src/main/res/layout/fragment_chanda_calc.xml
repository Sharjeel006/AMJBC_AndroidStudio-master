<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/ic_namaz_bg_6">

    <RelativeLayout
        android:id="@+id/InnerLinearLayout"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:background ="#50676767"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="NET INCOME"
                    android:textSize="24dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <EditText
                    android:id="@+id/income"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:maxLength="7"
                    android:textColor="@color/black"
                    android:hint="Enter here"
                    android:inputType="number"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginRight="10dp">

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background ="#50676767"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"

                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Chanda"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nettotalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="0.00"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:background ="#50676767"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:visibility="gone"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/netremamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:visibility="gone"
                    android:text="0.00"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:background ="#50676767"
        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:id="@+id/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aam"
                        android:textColor="@android:color/black"
                        android:paddingTop="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="25dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/mainamount"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="right"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="27dp"
                        android:enabled="false"
                        android:hint="0.00"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/jsalana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:text="J. Salana"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/jsalanaamount"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:ems="10"
                        android:enabled="false"
                        android:layout_marginLeft="27dp"
                        android:gravity="center_horizontal"
                        android:hint="0.00"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/aux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organizational"
                        android:layout_gravity="left|bottom"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/auxamount"
                        android:layout_gravity="right"
                        android:gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="27dp"
                        android:enabled="false"
                        android:inputType="numberDecimal"
                        android:hint="0.00"
                        android:ems="10"
                        />
                </TableRow>



                <TableRow
                    android:id="@+id/tableRow00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/aux1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:visibility="gone"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/otheramount"
                        android:visibility="gone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:hint="0.00"
                        />
                </TableRow>

            </TableLayout>

        </ScrollView>

    </FrameLayout>

    <CheckBox
        android:id="@+id/amount_roundup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/black"
        android:text="Round up" />

    
    <TextView
        android:text="@string/chanda_info_moosi"
        android:textColor="@color/black"
        android:id="@+id/MarqueeTextCalFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="18dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_marginTop="6dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        />
    


    <Button
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"/>
    
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        />
    <Button
        android:id="@+id/otherChandas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="8dp"
        android:layout_gravity="right"/>


</LinearLayout>